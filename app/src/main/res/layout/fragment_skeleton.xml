<?xml version="1.0" encoding="utf-8"?>

<com.facebook.shimmer.ShimmerFrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/shimmer_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".skeletonview.SkeletonFragment">

        <TextView
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/shimmerColor"
                android:id="@+id/tvTitle"
                android:textColor="@color/shimmerColor"
                android:textSize="@dimen/default_text_size"
                android:layout_marginTop="40dp"
                android:text="@string/hello_blank_fragment"/>


        <TextView
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/shimmerColor"
                android:textColor="@color/shimmerColor"
                android:id="@+id/tvSubtitle"
                android:textSize="@dimen/subtitle_textsize"
                android:layout_marginTop="@dimen/default_margin"
                android:text="@string/hello_blank_fragment"/>

        <TextView
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSubtitle"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:background="@color/shimmerColor"
                android:id="@+id/tvContent"
                android:textSize="@dimen/subtitle_textsize"
                android:textColor="@color/shimmerColor"
                android:layout_marginTop="86dp"
                android:text="@string/lorem_ipsum"/>

        <TextView
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvContent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:background="@color/shimmerColor"
                android:id="@+id/tvContent1"
                android:layout_marginTop="@dimen/small_margin"
                android:textSize="@dimen/subtitle_textsize"
                android:textColor="@color/shimmerColor"
                android:text="@string/lorem_ipsum"/>
        <TextView
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvContent1"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:background="@color/shimmerColor"
                android:id="@+id/tvContent2"
                android:layout_marginTop="@dimen/small_margin"
                android:textSize="@dimen/subtitle_textsize"
                android:textColor="@color/shimmerColor"
                android:text="@string/lorem_ipsum"/>


        <TextView
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvContent2"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:background="@color/shimmerColor"
                android:id="@+id/tvContent3"
                android:layout_marginTop="@dimen/small_margin"
                android:textSize="@dimen/subtitle_textsize"
                android:textColor="@color/shimmerColor"
                android:text="@string/lorem_ipsum"/>

        <TextView
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:background="@color/shimmerColor"
                android:id="@+id/tvContent9"
                android:layout_marginTop="@dimen/small_margin"
                android:textSize="@dimen/subtitle_textsize"
                android:layout_marginBottom="32dp"
                android:textColor="@color/shimmerColor"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/lorem_ipsum_shorter"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>
