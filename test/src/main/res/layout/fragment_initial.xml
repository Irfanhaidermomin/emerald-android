<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent"
              tools:context=".InitialFragment">

    <co.condorlabs.customcomponents.customedittext.BaseEditTextFormField
            android:id="@+id/firstField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:hint="1"
            app:is_required="true"
    />

    <co.condorlabs.customcomponents.customedittext.EditTextCurrencyField
            android:id="@+id/secondField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:hint="3"
            app:is_required="true"
    />
    <co.condorlabs.customcomponents.customedittext.EditTextDateField
            android:id="@+id/thirdField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:hint="4"
            app:is_required="true"
    />

    <co.condorlabs.customcomponents.customedittext.EditTextEmailField
            android:id="@+id/fourthField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:hint="5"
            app:is_required="true"
    />

    <co.condorlabs.customcomponents.customedittext.EditTextPhoneField
            android:id="@+id/sixField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:hint="5"
            app:is_required="true"
    />
</LinearLayout>
